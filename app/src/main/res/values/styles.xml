<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="day_of_week_view">
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/listitem_dayofweek_textsize</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_day_of_week</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/listitem_dayofweek_padding</item>
        <item name="android:textColor">@color/day_of_week_bule</item>
    </style>

    <style name="dialog_button">
        <item name="android:textSize">@dimen/dialog_button_font_size</item>
    </style>

</resources>
